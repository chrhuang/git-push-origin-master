<div class='container mt-3'>
  <h1>My Lists</h1>
  <%= link_to "Create a new list", new_list_path, class: "btn btn-outline-primary" %>
  <div class="cards mt-3">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.image_url %>)">
        <%= link_to list.name, list_path(list) %>
      </div>
    <% end %>
  </div>
</div>
